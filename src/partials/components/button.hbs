<table border="0" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <td align="{{#if align}}{{ align }}{{^}}left{{/if}}">
      <table class="button {{ type }} {{ props }} {{ spacing }}" border="0" cellpadding="0" cellspacing="0" >
        <tr>
          <td>
            <table border="0" cellpadding="0" cellspacing="0">
              <tr>
                <td>
                  <a class="fontFamily arial fontSize inherit fontWeight bold" href="{{ url }}">
                    <span class="{{ props }}">
                      {{ title }}
                    </span>
                  </a>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>