<table class="pod" border="0" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <td class="pod_image">
      <a href="{{#if imageUrl}}{{ imageUrl }}{{else}}{{/if}}">
        <img class="image-fix" src={{ image }} width="284" alt="{{ alt }}"/>
      </a>
    </td>
  </tr>
  {{#if retailer}}
    <tr>
      <td class="pod_title" align="left">
        <h3 class="fontFamily roboto">
          <span>
            {{retailer}}
          </span>
        </h3>
      </td>
    </tr>
  {{/if}}
  {{#if @partial-block}}
    <tr>
      <td class="pod_details" align="left">
        <p class="fontFamily bariol">
          {{> @partial-block }}
        </p>
      </td>
    </tr>
  {{/if}}
  {{#if cta}}
    <tr>
      <td class="pod_cta" align="left">
        <p class="fontFamily bariol">
          {{ cta }}
        </p>
      </td>
    </tr>
  {{/if}}
  {{#if button}}
    <tr>
      <td class="pod_button" align="left">
        {{> button type='thunderbird' props='fontFamily bariol fontSize subheader colour white' align="left" url=url title=button }}
      </td>
    </tr>
  {{/if}}
</table>