<table class="image {{ type }}" border="0" cellpadding="0" cellspacing="0">
  <tbody>
    <tr>
      <td>
        {{#if url}}
          <a href="{{ url }}">
            <img class="image-fix" src="{{ src }}" alt="{{#if alt}}{{ alt }}{{^}}image{{/if}}" width="{{ width }}">
          </a>
        {{else}}
          <img class="image-fix" src="{{ src }}" alt="{{#if alt}}{{ alt }}{{^}}image{{/if}}" width="{{ width }}">
        {{/if}}
      </td>
    </tr>
  </tbody>
</table>